{% extends 'base.html.twig' %}

{% block title %}COMPETENCES & PROJETS REALISES{% endblock %}

{% block body %}
<style>
    body {
        background-color: #f2f2f2; /* Gris légèrement plus foncé */
        font-family: 'Arial', sans-serif;
        color: #555; /* Gris foncé pour le texte */
    }

    .header {
        text-align: center;
        background-color: #FF6B6B; /* Rouge corail */
        color: #fff; /* Blanc pour le texte */
        padding: 1.5em 0;
        margin-block-end: 2em;
    }

    .header h1 {
        font-size: 2em;
    }

    .skills-section {
       margin-block-end: 2em; 
    }

    .skills-section h2 {
       border-block-end: 2px solid #FF6B6B; /* Rouge corail */
      padding-block-end: 0.5em; 
      margin-block-end: 1em;
    }

    .skills-list {
        list-style-type: none;
        padding-inline-start: 0;
    }

    .skills-list li {
       margin-block-end: 1em;
       font-size: 1.2em;
    }

    .project-section {
       margin-block-end: 2em;
    }

    .project-section h2 {
        border-block-end: 2px solid #4A90E2; /* Bleu vif */
       padding-block-end: 0.5em;
       margin-block-end: 1em; 
       font-size: 1.8em;
    }

    .project-list {
        list-style-type: none;
        padding-inline-start: 0;
    }

    .project-list li {
       margin-block-end: 1em;
       font-size: 1.2em;
    }

    .project-list a {
        color: #4A90E2; /* Bleu vif */
        text-decoration: none;
        transition: color 0.3s ease;
    }

    .project-list a:hover {
        color: #FF6B6B; /* Rouge corail */
        text-decoration: underline;
    }

    .projects-link {
        text-align: center;
         margin-block-start: 2em;
    }

    .projects-link a {
        display: inline-block;
        padding: 1em 2em;
        background-color: #FF6B6B; /* Rouge corail */
        color: #fff;
        text-decoration: none;
        border-radius: 4px;
        transition: background-color 0.3s ease;
        font-size: 1.2em;
    }

    .projects-link a:hover {
        background-color: #4A90E2; /* Bleu vif */
        color: #fff;
    }
</style>

